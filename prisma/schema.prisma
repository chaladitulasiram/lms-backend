// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Enum for Strict Role-Based Access Control 
enum UserRole {
  ADMIN
  MENTOR
  STUDENT
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String   // Hashed using Bcrypt
  name        String?  // Full name
  phone       String?  // Phone number
  designation String?  // Job title/designation
  avatar      String?  // Profile picture URL
  bio         String?  @db.Text // User biography
  role        UserRole @default(STUDENT)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  // Relations
  coursesOwned    Course[]       @relation("MentorCourses")
  enrollments     Enrollment[]
  submissions     Submission[]
  certificates    Certificate[]
  courseRatings   CourseRating[]
}

model Course {
  id          String   @id @default(uuid())
  title       String
  description String
  thumbnail   String?  // Course thumbnail URL
  mentorId    String
  mentor      User     @relation("MentorCourses", fields: [mentorId], references: [id])
  modules     Module[]
  isPublished Boolean  @default(true)

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @default(now()) @updatedAt
  enrollments  Enrollment[]
  certificates Certificate[]
  ratings      CourseRating[]
}

model Module {
  id          String       @id @default(uuid())
  title       String
  content     String       @db.Text
  videoUrl    String?
  order       Int          @default(0)
  duration    Int?         // Duration in minutes
  courseId    String
  course      Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  assignments Assignment[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now()) @updatedAt
}

model Assignment {
  id          String       @id @default(uuid())
  title       String
  description String       @db.Text
  dueDate     DateTime?
  maxScore    Float        @default(100)
  moduleId    String
  module      Module       @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  submissions Submission[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now()) @updatedAt
}

model Submission {
  id           String     @id @default(uuid())
  content      String     @db.Text
  fileUrl      String?
  score        Float?
  feedback     String?    @db.Text
  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  studentId    String
  student      User       @relation(fields: [studentId], references: [id])
  submittedAt  DateTime   @default(now())
  gradedAt     DateTime?
  
  @@unique([assignmentId, studentId])
}

model Enrollment {
  id           String    @id @default(uuid())
  userId       String
  courseId     String
  user         User      @relation(fields: [userId], references: [id])
  course       Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  progress     Float     @default(0.0) // Percentage 0-100
  lastAccessed DateTime  @default(now())
  completedAt  DateTime? // When the course was completed
  enrolledAt   DateTime  @default(now())
  
  @@unique([userId, courseId])
}

model CourseRating {
  id         String   @id @default(uuid())
  userId     String
  courseId   String
  rating     Int      // 1-5 stars
  review     String?  @db.Text
  user       User     @relation(fields: [userId], references: [id])
  course     Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
  
  @@unique([userId, courseId])
}

model Analytics {
  id                String   @id @default(uuid())
  totalStudents     Int      @default(0)
  totalMentors      Int      @default(0)
  totalAdmins       Int      @default(0)
  activeCourses     Int      @default(0)
  totalEnrollments  Int      @default(0)
  completionRate    Float    @default(0)
  averageProgress   Float    @default(0)
  revenue           Float    @default(0)
  date              DateTime @default(now())
  createdAt         DateTime @default(now())
}

model Certificate {
  id             String   @id @default(uuid())
  studentId      String
  student        User     @relation(fields: [studentId], references: [id])
  courseId       String
  course         Course   @relation(fields: [courseId], references: [id])
  certificateUrl String?
  certificateNumber String @unique
  issuedAt       DateTime @default(now())
  
  @@unique([studentId, courseId])
}